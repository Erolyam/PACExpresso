.passer {
  .qtabctn {
    // la barre Ã  gauche avec les alineas
    // http://colorschemedesigner.com/#0J51Tw0w0w0w0
    ul {
      list-style:none
      margin:0
      li {
        text-align:center
        width:60px
        height:40px
        line-height:40px
        border-bottom:1px solid #000
        cursor:pointer
        background:#FFC473
        &.selected {
          background:#FF9400
        }
        &:hover {
          background:#FF9400
        }
        &:first-child {
          border-top:1px solid #000
        }
      }
    }
  }
  .qbodyctn {
    .context {
      .body {
        text-align:justify
      }
    }
    .alineabody {
      text-align:justify
    }
    background:#fff
  }
  header.well{
    margin-bottom:0;
    border-radius: 10px 10px 0 0
  }
  footer {
    margin-top:0;
    border-radius: 0 0 10px 10px
    text-align:right
  }
}

.passer .oneanswer
  border:1px solid #000
  display:inline-block
  margin: 0 5px 5px 0
  label
    input[type=checkbox]
      margin:auto
    display:block
    text-align:center
    background:#ffc
    height:2em
    line-height:2em
    border-bottom:1px solid #000
    padding:0 5px
  .body
    display:block
    background:#fff
    text-align:justify
    padding:0 5px

