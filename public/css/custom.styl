.passer {
  .qtabctn {
    // la barre à gauche avec les alineas
    // http://colorschemedesigner.com/#0J51Tw0w0w0w0
    ul {
      list-style:none
      margin:0
      li {
        text-align:center
        width:60px
        height:40px
        line-height:40px
        border-bottom:1px solid #000
        cursor:pointer
        background:#FFC473
        &:first-child {
          border-top:1px solid #000
        }
        &.selected {
          // en premier pour ne pas prendre priorité
          background:#FF9400
          border-left:4px solid #000
          width:(@width - 4 - 4)
          padding-right:4px
        }
        &.result-right {
          background:#bbff33
        }
        &.result-wrong {
          background:#ff4d50
        }
        &:hover {
          background:#FF9400
        }
      }
    }
  }
  .qbodyctn {
    .context {
      .body {
        text-align:justify
      }
    }
    .alineabody {
      text-align:justify
    }
    background:#fff
  }
  header {
    position:relative
    &.well {
      margin-bottom:0
      border-radius: 10px 10px 0 0
    }
    .title {
      font-size:150%
      display:inline-block
    }
    .navbuttons {
      position:absolute
      bottom:25%
      right:2em
    }
  }
  footer {
    margin-top:0;
    border-radius: 0 0 10px 10px
    text-align:right
  }
}


.passer .oneanswer
  border:1px solid #000
  display:inline-block
  margin: 0 5px 5px 0
  label
    input[type=checkbox]
      margin:auto
    display:block
    text-align:center
    background:#ffc
    height:2em
    line-height:2em
    border-bottom:1px solid #000
    padding:0 5px
    .result
      width:40px
      background:#0F0
    &.result-wrong
      background:#F00
      padding-right:0
    &.result-right
      background:#0F0
  .letter.larger
    min-width:110px
  .body
    display:block
    background:#fff
    text-align:justify
    padding:0 5px

